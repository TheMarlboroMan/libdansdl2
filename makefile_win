#Machine specifics.
DIR_HOME=
DIR_OBJ=objects
LOGPATH=$(DIR_HOME)/log/
MINGWPATH=c:/devel/deps/mingw-w64/mingw32/
SDL2PATH=c:/devel/deps/sdl2-plus-libs/
SYSTEM_FLAGS=-DWINCOMPIL=1 -D__NO_INLINE__ 

#Commands.
CLEAN=if exist $(DIR_OBJ) rmdir $(DIR_OBJ) /S /Q; if exist libDanSDL2.a del libDanSDL2.a;
CREATE_OBJ_DIR=	if not exist $(DIR_OBJ) mkdir $(DIR_OBJ);

#Build specifics.
#OPTIMIZATION=-O3
DEBUG=-g

#Fixed compiler definitions.
CC=g++
INCLUDES=-I$(LOGPATH) -I$(MINGWPATH)include/ -I$(SDL2PATH)include/
WARNING_FLAGS=-Wno-deprecated -Wall
CFLAGS=-c $(DEBUG) $(OPTIMIZATION) $(WARNING_FLAGS) -ansi -pedantic -std=c++11 -fno-rtti $(INCLUDES) 

include make/makefile_common
