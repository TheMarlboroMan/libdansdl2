#Machine specifics.
MINGWPATH=c:/devel/deps/mingw-w64/mingw32/
SDL2PATH=c:/devel/deps/sdl2-plus-libs/
LOGPATH=../log/
SYSTEM_FLAGS=-DWINCOMPIL=1 -D__NO_INLINE__ 
DIR_O=./objects/

#Commands.
CLEAN=if exist $(DIR_O) rmdir $(DIR_O) /S /Q;\
	if exist libDanSDL2.a del libDanSDL2.a;
CREATE_OBJ_DIR=	if not exist $(DIR_O) mkdir $(DIR_O);

#Build specifics.
#OPTIMIZATION=-O3
DEBUG=-g

#Fixed compiler definitions.
CC=g++
INCLUDES=-I$(LOGPATH)src/ -I$(MINGWPATH)include/ -I$(SDL2PATH)include/
WARNING_FLAGS=-Wno-deprecated -Wall
CFLAGS=-c $(DEBUG) $(OPTIMIZATION) $(WARNING_FLAGS) $(INCLUDES) -ansi -pedantic -std=c++11 -fno-rtti

