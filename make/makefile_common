	$(DIR_O)audio_resource_manager.o \
	$(DIR_O)sound.o \
	$(DIR_O)music.o \
	$(DIR_O)sdl_video_tools.o

all: create_obj libDanSDL2.a

libDanSDL2.a: create_obj $(OBJETOS)
	ar rcs libDanSDL2.a $(OBJETOS)

create_obj:
	$(CREATE_OBJ_DIR)

clean:
	$(CLEAN)

