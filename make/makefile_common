	$(DIR_O)polygon_representation.o \
	$(DIR_O)point_representation.o \
	$(DIR_O)bitmap_representation.o \
	$(DIR_O)ttf_representation.o \
	$(DIR_O)camera.o \
	$(DIR_O)draw_info.o \
	$(DIR_CLASS_H)vector_2d/vector_2d.h \
	$(DIR_CLASS_H)point_2d/point_2d.h \
	$(DIR_CLASS_H)polygon_2d/polygon_2d.h \
	$(DIR_CLASS_H)box/box.h \
	$(DIR_CLASS_H)line/line.h \
	$(DIR_O)log.o \
	$(DIR_O)sdl_tools.o \
